{
  "database": {
    "type": "mysql",
    "path": "data/pool_chemistry.db",
    "backup_interval": 24
  },
  "pool_defaults": {
    "size": 20000,
    "type": "Chlorine",
    "target_ph": 7.2,
    "target_chlorine": 2.0,
    "target_alkalinity": 100,
    "target_hardness": 200,
    "target_cyanuric": 40
  },
  "chemicals": {
    "ph_increaser": "Sodium Carbonate",
    "ph_decreaser": "Muriatic Acid",
    "chlorine_type": "Liquid Chlorine",
    "alkalinity_increaser": "Sodium Bicarbonate"
  },
  "safety": {
    "max_adjustments": 3,
    "min_time_hours": 4,
    "safety_warnings": true,
    "dosage_limits": true
  },
  "application": {
    "theme": "clam",
    "window_size": "maximized",
    "autosave_minutes": 5,
    "startup_check": true,
    "confirm_exit": true,
    "log_level": "INFO",
    "log_file": "logs/pool_app.log",
    "log_size_mb": 10
  }
}